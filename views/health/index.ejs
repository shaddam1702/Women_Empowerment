<div style="margin-top: 2em;"class="ui main text container">
    <div class="ui huge header">Health app</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% healths.forEach(function(health){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= health.image %>">
                </div>
                <div class="content">
                        <a class="header" href="/indexhealth/<%= health._id %>"><%= health.title %></a>
                   <div class="meta">
                       <span><%= health.created.toDateString() %></span>
                   </div>
                   <div class="description">
                       <p><%- health.body.substring(0,100) %>...</p>
                   </div>
                   <div class="extra">
                       <a class="ui basic blue button floated" href="/indexhealth/<%= health._id %>">
                           Read More
                           <i class="right chevron icon"></i>
                       </a>
                   </div>
               </div>
           </div>
        <% }); %>
        </div>
    </div>
</div>

